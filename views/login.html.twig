{% extends 'layout.html.twig' %}

{% block title %}
    {% if app.user %}
    Accueil
    {% else %}
    Authentification
    {% endif %}
{% endblock %}

{% block content %}
{% if app.user %}
<h2 class="text-center"><b>Bienvenue dans l'application GALAXY SWISS BOURDIN</b> <br><br>
    Cliquez sur une Section pour y accéder</h2>
{% elseif error %}
<div class="alert alert-danger">
    <strong>Connexion échouée</strong> {{ error }}
</div>
 {% else %}
 <h2 class="text-center"><b>Bonjour <br><br> Veuillez vous identifier</h2>
{% endif %}


{% if app.user %}
<div class="well">
    <div class="btn-group" style="width: 30%; margin:1%;" >  
      <a class="btn btn-default btn-lg" href="{{ path('specialite_praticiens') }}" role="button" style="width: 100%;"> 
    <span class="glyphicon glyphicon-plus"></span> </br> Praticiens</a>
    </div> 
    <div class="btn-group"  role="group" style="width: 30%; margin:1%;">
        <a class="btn btn-default btn-lg" href="{{ path('secteur_visiteurs') }}" role="button" style="width: 100%;"> 
    <span class="glyphicon glyphicon-heart-empty"></span> </br> Visiteurs</a>
    </div>
    <div class="btn-group"  role="group" style="width: 30%; margin:1%;" >
        <a class="btn btn-default btn-lg" href="{{ path('famille_produits') }}" role="button" style="width: 100%;"> 
    <span class="glyphicon glyphicon-barcode"></span> </br> Produits</a> 
    </div> 
    
   
</div>
{% else %}
<div class="well">
    <form class="form-signin form-horizontal" role="form" action="{{ path('login_check') }}" method="post">
        <div class="form-group">
            <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
            <input type="text" name="_username" value="{{ last_username }}" class="form-control" placeholder="Nom d'utilisateur" required autofocus>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                <input type="password" name="_password" class="form-control" placeholder="Mot de passe" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-log-in"></span> Connexion</button>
            </div>
        </div>
    </form>
</div>
{% endif %}
{% endblock %}